{
	"$schema": "https://biomejs.dev/schemas/2.4.3/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"files": {
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/*.db"]
	}
}
